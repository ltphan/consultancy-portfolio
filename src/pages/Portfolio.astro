---
import BrexCard from "../pages/BrexCard.astro";
import ClioCard from "../pages/ClioCard.astro";

import PhoneImage from "./PhoneImage.astro";
import EmailImage from "../pages/EmailImage.astro";
import GithubImage from "../pages/GithubImage.astro";
import LinkedinImage from "./LinkedinImage.astro";
import XImage from "./XImage.astro";

import NavigationHeader from "@components/NavigationHeader";
import Form from "@components/Form";
import WorkProcessSection from "@components/WorkProcessSection";
import ServicesSection from "@components/ServiceSection";
import SpotlightSection from "@components/SpotlightSection";
import WorkProjectSection from "@components/WorkProjectSection";

const formEndpoint = import.meta.env.PUBLIC_FORMSPREE_ENDPOINT;

const firstParagraphIntro = `Linh is an accomplished software engineer with experience building production-ready web and mobile applications, focused on delivering high-quality solutions through customer obsession and craftsmanship. She creates both traditional and AI-enhanced applications tailored to each client's specific needs.`;

/**
 * TODO: implement Intersection observer as user scrolls to highlight what section in the nav user is on
 */
---

<NavigationHeader client:load />

<main class="min-h-svh">
  <div id="hero" class="hero-section">
    <h1>
      Stop Planning Your Strategy.<br />
      Start <span class="accent">Executing</span> It.
    </h1>
    <p>
      Strategic guidance, digital transformation, and AI expertise—tailored for your unique challenges.
    </p>
    <a href="#contact" class="contact-button" onclick="event.preventDefault(); document.getElementById('contact').scrollIntoView({behavior: 'smooth'})">
      Get in touch
    </a>
  </div>
  <div class="w-content">
    <WorkProcessSection client:load />
    <h3
      class="text-4xl font-serif font-bold mb-10 text-center tracking-tight"
      style="font-family: 'Georgia, Times New Roman, serif'; color: #fff;"
    >
      My <span style="color: #0047ab; font-style: italic;">Work</span>
    </h3>
    <WorkProjectSection client:load />

    <div id="services" style="position: relative; top: -80px; height: 1px;"></div>
    <h3
      class="text-3xl font-serif font-bold mb-10 text-center tracking-tight"
      style="font-family: 'Georgia, Times New Roman, serif'; color: #fff;"
    >
      Services <span style="color: #0047ab; font-style: italic;">Offered</span>
    </h3>
    <ServicesSection client:load />

    <div id="contact" style="position: relative; top: -80px; height: 1px;"></div>
    <h3
      class="text-3xl font-serif font-bold mb-10 text-center tracking-tight"
      style="font-family: 'Georgia, Times New Roman, serif'; color: #fff;"
    >
      Let's <span style="color: #0047ab; font-style: italic;">Collaborate</span>
    </h3>
    <div class="max-w-xl mx-auto flex flex-col items-center">
      <a
        href="https://cal.com/linh-phan/30min?user=linh-phan&overlayCalendar=true"
        class="inline-block bg-[#0047ab] text-white font-semibold rounded-full px-6 py-3 mb-6 transition-colors hover:bg-[#003380] text-center w-full"
      >
        Book a Call
      </a>
      <div class="rounded-xl border border-[#0047ab] bg-[#101820]/80 p-8 mb-10 w-full">
        <Form formEndpoint={formEndpoint} client:load />
      </div>
    </div>

    <div id="about" style="position: relative; top: -80px; height: 1px;"></div>
    <div class="content-box">
      <h2 class="mb-10">about me</h2>
      <div>
        <p class="intro-text">
          {firstParagraphIntro}
        </p>
        <br />
        <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
          <div class="col-span-full flex items-center flex-wrap">
            <span class="md:whitespace-nowrap mr-0 md:mr-2">
              She has worked at highgrowth startups that include
            </span>
            <div
              class="w-full md:w-auto flex items-center justify-center md:justify-start mt-4 md:mt-0 ml-4"
            >
              <div class="startup-cards relative w-24 h-16">
                <a href="https://www.clio.com/"
                  ><ClioCard class="absolute card-right" /></a
                >
                <a href="https://www.brex.com/"
                  ><BrexCard class="absolute card-left" /></a
                >
              </div>
            </div>
          </div>
        </div>

        <br />
        <span
          >She has experience building 0-to-1 products, revamping and
          redesigning applications, scaling from 30,000+ users to 600,000+
          users. Whether developing conventional applications or integrating
          AI capabilities where they add genuine value, her focus remains on
          creating thoughtful, user-centered solutions.</span
        >
        <br />
        <br />
        <span>
          Every line of code and every interface element is crafted with
          intention and purpose. I build applications I would proudly use
          myself—because if it doesn't meet my standards, it won't meet yours.
        </span>
      </div>
    </div>
  </div>

  <footer class="bg-green-100 p-4 m-2 rounded-md">
    <h2 class="mb-2">connect with me</h2>
    <div class="flex gap-2">
      <div
        class="w-12 h-12 bg-blue-200 rounded-[1vw] flex items-center justify-center"
      >
        <a
          href="https://github.com/ltphan"
          class="flex items-center justify-center w-8 h-8"
        >
          <GithubImage />
        </a>
      </div>
      <div
        class="w-12 h-12 bg-blue-200 rounded-[1vw] flex items-center justify-center"
      >
        <a
          href="https://www.linkedin.com/in/linhphan01/"
          class="flex items-center justify-center w-8 h-8"
        >
          <LinkedinImage />
        </a>
      </div>
      <div
        class="w-12 h-12 bg-blue-200 rounded-[1vw] flex items-center justify-center"
      >
        <a
          href="https://x.com/lennie25"
          class="flex items-center justify-center w-8 h-8"
        >
          <XImage />
        </a>
      </div>
    </div>
  </footer>

  <div class="h-2"></div>
</main>
