---
import NavigationHeader from "@components/NavigationHeader";
import Form from "@components/Form";
import WorkProjectSection from "@components/WorkProjectSection";
import TestimonialsSection from "@components/TestimonialsSection";

const formEndpoint = import.meta.env.PUBLIC_FORMSPREE_ENDPOINT;
---

<NavigationHeader client:load />

<main class="min-h-svh">
  <div id="hero" class="hero-section">
    <div class="floating-orb orb-1"></div>
    <div class="floating-orb orb-2"></div>
    <div class="floating-orb orb-3"></div>
    <div class="floating-orb orb-4"></div>
    <h1>
      Software That Actually <span class="accent">Works</span><br />
    </h1>
    <p>
      Web and mobile applications built to solve your specific business
      problemsâ€”from AI integration to user-friendly interfaces that scale.
    </p>
    <a
      href="#contact"
      class="contact-button"
      onclick="event.preventDefault(); document.getElementById('contact').scrollIntoView({behavior: 'smooth'})"
    >
      Get in touch
    </a>
  </div>

  <TestimonialsSection client:load />

  <div class="w-content">
    <div id="work" class="relative -top-[120px] h-1"></div>
    <div class="mb-20">
      <WorkProjectSection client:load />
    </div>

    <div id="contact" style="position: relative; top: -80px; height: 1px;">
    </div>
    <div class="mb-20">
      <div class="max-w-3xl mx-auto flex flex-col items-center">
        <div
          class="rounded-xl border border-[#0047ab] bg-[#101820]/80 p-8 mb-10 w-full"
        >
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
              <h2 class="text-2xl font-serif font-bold mb-4 text-white">
                Stop strategizing, start shipping.
              </h2>
              <p class="text-white mb-4">
                I build custom digital solutions that actually work, delivering
                tangible results tailored to your unique challenges.
              </p>
              <p class="text-white">Ready to turn your vision into reality?</p>
              <div class="mt-6">
                <p>
                  <a
                    href="https://cal.com/linh-phan/30min?user=linh-phan&overlayCalendar=true"
                    class="inline-block text-white border-b border-white pb-1 transition-colors hover:bg-[#003380]"
                  >
                    Book a Call
                  </a>
                </p>
              </div>
            </div>
            <div>
              <Form formEndpoint={formEndpoint} client:load />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
